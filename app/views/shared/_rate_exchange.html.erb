<!-- MODAL -->
    <% @targ_listing = UserListing.find(@exch.targ_list_id)%>
    <% @init_listing = UserListing.find(@exch.init_list_id)%>
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h3 id="myModalLabel">Rate Exchange</h3>
        </div>
        <%= form_tag @exch, :url => url_for(:controller => 'exchanges', :action => 'rate_exchange') do %>
        <div class="modal-body">
        
            <div class='row-fluid'>
                <!--user viewing -->
                <div class='span4' id="userInfo">
                    <br>
                    <%= image_tag(current_user.profile.photo.url, {:width => '100px', :height => '100px'}) %><br>
                    <%= current_user.name %>
                </div><!-- .span4 -->
            
                <!--Kirpeep Exchage Status Logo -->
                <div class='span4 align-center' id="exchangeStatus">
                    <p><%= image_tag('RRExchIco.png', {:width => '100px', :height => '100px'} ) %></p>
                </div><!-- .span4 -->
                
                <!--exchange partner -->
                <div class='span4 align-right' id="exchangePartner" >
                    <span id="with">exchanging with</span><br>
                    <% if (current_user.id).to_s == (@init_listing.user.id).to_s %>
                        <%= image_tag(@targ_listing.user.profile.photo.url, {:width => '100px', :height => '100px'}) %>
                        <br>
                        <%= @targ_listing.user.name %>
                    <%else%>
                        <%= image_tag(@init_listing.user.profile.photo.url, {:width => '100px', :height => '100px'}) %>
                        <br>
                        <%= @init_listing.user.name %>
                    <%end%>
                </div><!-- .span4 -->
            </div><!-- .row-fluid-->
            <!--opens middle section-->
            <div class='row-fluid'>
                <!--left side-->
                <div class='span6'>
                    <div>
                        <span id="getting">You are getting...</span>
                    </div>

                    <% if @targ_listing.user.id == current_user.id %>
                        <% @offer_listing = @init_listing %>
                        <% @need_listing =  @targ_listing%>
                    <%else%>
                        <% @offer_listing = @targ_listing %>
                        <% @need_listing =  @init_listing %>
                    <%end%>

                    <div class="rounded-offer shadow">
                        <div>
                            <%= image_tag(@offer_listing.photo.url, {:width => "50px", :height => '50px'}) %>
                        </div>
                        <div>
                            <span>OFFERED</span> 
                        </div>
                        <div>    
                            <%= @offer_listing.title %>
                            <%= @offer_listing.inventoryCount %>
                            <%= @offer_listing.description %>
                        </div>
                    </div>
                </div> <!-- .span6 -->

                <!--Right Side-->
                <div class='span6'>
                    <div>
                        <span id="giving">You are giving this...</span>
                    </div>

                    <div class="rounded-need shadow">
                        <div>
                            <%= image_tag(@need_listing.photo.url, {:width => "50px", :height => '50px'} )%>
                        </div>
                        <div>
                            <span>NEEDED</span> 
                        </div>
                        <div>
                            <%= @need_listing.title %>
                            <%= @need_listing.quantity %> <%= @targ_listing.quantityUnit %>
                            Description: <%= @need_listing.description %>
                        </div>
                    </div>
                </div><!-- .span6 -->
            </div><!--.row-fluid -->
            <!-- Exchange Message-->
            <div class="row-fluid">
                <span>Message</span>
                <div class="rounded-map shadow" id="message" style="overflow:scroll; height: 100px;">
                    <% exch_message_link = ExchangeMessageLink.where(:exchange_id => @exch.id).first %>
                    <% current_message = Message.find(exch_message_link.message_id) %>
                    <% reply_message_id = current_message.id %>
                    <% begin %>
                        <%= render :partial =>current_message, :locals => {:current_message => current_message} %>
                        <% reply_message_id = current_message.id %>
                        <% current_message = Message.where(:responseToMsgID => current_message.id).first %>
                    <% end while(current_message != nil) %>
                    <div>
                        <%= form_for Message.new, :remote => true, :html => {:class => "reply_message"} do |f| %>
                            <%= f.hidden_field :initUser, :value => current_user.id %>
                            <%= f.hidden_field :responseToMsgID, :value =>  reply_message_id %>
                            <% if is_current_user(@init_listing.user) %>
                                <%= f.hidden_field :targUser, :value => @targ_listing.user.id %>
                            <% else %>
                                <%= f.hidden_field :targUser, :value => @init_listing.user.id %>
                            <% end %>
                            <%= f.text_field :text %>
                            
                            <%= f.submit :reply, :class => "btn btn-primary" %>
                        <% end %>
                    </div>
                </div>
            </div>
            
            <div class='row-fluid'>
                
                Time: <%= range_field_tag :time, {:min => 0, :max => 5, :step => 1} %><br>
                Cost: <%= range_field_tag :cost, {:min => 0, :max => 5, :step => 1} %><br>
                Ease: <%= range_field_tag :ease, {:min => 0, :max => 5, :step => 1} %><br>
                Overall: <%= range_field_tag :overall, {:min => 0, :max => 5, :step => 1} %><br>
                Comments:<br><%= text_area_tag :comments %><br>

                <%= hidden_field_tag :exch_id, @exch.id %>
                <%= hidden_field_tag :user_id, (current_user.id).to_s%>
            </div><!-- .row-fluid -->
        </div>
        <!--Opens Bottom Section-->
        <div class="modal-footer">
            <% if((@exch.initUser).to_s == (current_user.id).to_s ) %>
                <% if @exch.init_rating_overall != nil %>
                    Waiting for user
                <%else%>
                    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                    <%= submit_tag 'Rate', :class => "btn btn-primary" %>
                <%end%>
            <%else%>
                <% if @exch.targ_rating_overall != nil %>
                    Waiting for user
                <%else%>
                    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                    <%= submit_tag 'Rate', :class => "btn btn-primary" %>
                <%end%>
            <%end%>
        </div>
        <% end %>
        