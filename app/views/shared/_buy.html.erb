<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Purchase</h3>
</div>
<div class="modal-body">
	<div class="row-fluid">
	  	<span>You are buying</span>

	  	<!-- Be Sure to make partials for these listings-->
	  	<% @user_photo = listing.user.profile.photo.url %>
		<% if listing.type == 'Offer' %>
			<!-- Offer Listing -->
			<div class="rounded-offer">
				<div class="row-fluid">
					<span class="offer-span">OFFERED</span> 
					<span><%= listing.title %></span>
				</div>
				<div class="row-fluid">
					<p><%= listing.description %></p>
				</div>
				<div style= "display:none;">
				<%= image_tag('favorite.png') %> <!-- width="30" height="30" /><br /> -->
				<%= image_tag('kid.png') %> <!-- width="43" height="34" /> -->
				</div>
				<div class="row-fluid">
					<div class="span6">
					<%= link_to image_tag(@user_photo, {:width => '100px', :height => '100px'}), listing.user, {:id => 'userImage', 'rel' =>'popover' } %>
					<%= image_tag('stars.png') %>
					</div>
					<div id="offer-listing" class="span6">
						<div>
						<%= image_tag(listing.photo.url, {:width => '100px', :height => '100px'}) %> <!-- width="103" height="103" /> -->
						</div>
					</div>
				</div>
			</div>
		<%else%>
			<!-- Need Listing -->
			<div class="rounded-need">
				<div class="row-fluid">
					<span class="need-span">NEED</span> 
					<span><%= listing.title %></span>
				</div>
				<div class="row-fluid">
					<p><%= listing.description %></p>
				</div>
				<div style= "display:none;">
					<%= image_tag('favorite.png') %> <!-- width="30" height="30" /><br /> -->
					<%= image_tag('kid.png') %> <!-- width="43" height="34" /> -->
				</div>
				<div class="row-fluid">
					<div class="span6">
						<%= link_to image_tag(@user_photo, {:width => '100px', :height => '100px'}), listing.user, {:id => 'userImage', 'rel' =>'popover' } %>
						<%= image_tag('stars.png') %>
					</div>
			
					<div id="need-listing" class="span6">
						<div>
							<%= image_tag(listing.photo.url, {:width => '100px', :height => '100px'}) %>
						</div>
					</div>
				</div>
			</div>
		<%end%>
	<!-- End of listings-->
	</div>
</div>
<div class="modal-footer">
	<%= submit_tag 'Buy Now', :class => "btn" %>
</div>