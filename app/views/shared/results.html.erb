<%= stylesheet_link_tag    "tooltip_style.css" %>
<%= stylesheet_link_tag    "results.css" %>

<%= javascript_include_tag 'jqcloud-1.0.1' %>
<%= javascript_include_tag "fade" %>
<%= javascript_include_tag "jquery.betterTooltip" %>
<%= javascript_include_tag "results" %>

<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

<title>Kirpeep | <%= @title %></title>

</head>

<body>
  <div class="container">
    <%= render 'shared/header' %>

    <div style="width: 100%"><hr/></div>
    <div class="row-fluid">
      <div class="span5"> <!--yes, I know this is not indented right. I want to make sure it works first-->
                          <!-- nice job on the comments, I was about to call you a bitch for nothing, good job -->
        <div class="row-fluid">
          <% if params[:search].to_s == ''%>
            <h1>Browse Listings</h1>
          <%else%>
            <h1>Search Results For <%= params[:search] %></h1> 
          <%end%>
        </div>
        <div class='row-fluid'>
          <!-- % = will_paginate @userlistings%-->


          <!-- Be Sure to make partials for these listings-->
          <% for listing in @userlistings  %>
            <% next if listing.is_deleted || listing.nil? %>
            <% @user_photo = listing.user.profile.photo.url %>
       		  <% if listing.type == 'Offer' %>
            <!-- Offer Listing -->
              <div class="rounded-offer">
                <div class="row-fluid">
                    <span class="offer-span">OFFERED</span> 
                    <span><%= listing.title %></span>
                </div>
                <div class="row-fluid">
                  <p><%= listing.description %></p>
                </div>
                <div style= "display:none;">
                  <%= image_tag('favorite.png') %> <!-- width="30" height="30" /><br /> -->
                  <%= image_tag('kid.png') %> <!-- width="43" height="34" /> -->
                </div>
                <div class="row-fluid">
                  <div class="span3">
                    <%= link_to image_tag(@user_photo, {:width => '100px', :height => '100px'}), listing.user, {:id => 'userImage', 'rel' =>'popover' } %>
                    <%= image_tag('stars.png') %>
                  </div>
                  <div id="offer-actions" class="span6">
                    <div class="row-fluid tool">

                      <!-- Message-->
                      <div class="span3">
                        <a href="/sendmessage/<%= listing.user.id %>&nil" class='dynamolink'>
                        <%= image_tag('message.png', :class=>"message", :title=>"message") %> 
                        </a>
                      </div>
                      <!-- Initiate Exchange-->
                      <div class="span3 tTip" title="Exchange">
                        <% if signed_in? %>
                          <a class="dynamolink" href="/initiate_exchange/<%= @user.id.to_s %>&<%= listing.id.to_s%>">    
                            <%= image_tag('exchange.png') %>
                          </a>
                        
                        <%else%>
                        <%= image_tag('exchange.png', {:title=>"exchange"}) %>
                        <%end%> 
                      </div>
                      <div class="span3">
                        <a class="dynamolink" href="/quicksale/<%= listing.id.to_s%>">  
                          <%= image_tag('price.png') %>
                        </a>
                      </div>
                      <div class="span3">
                        <a class="dynamolink" href="/share/<%= listing.id.to_s%>">  
                          <%= image_tag('share.png') %>
                        </a>
                      </div>
                    </div>
                    <div class="row-fluid">
                      <div class="span6" id="offer-name">
                        <%= listing.user.name %> <br />
                        <%= Exchange.where("id != ?",listing.user.id).all.count %> Exchanges<br />
                        Reviews (0)
                      </div>
                      <div class="span6">
                        (<%= listing.user.needs.count %>) NEED
                        <br />
                        (<%= listing.user.offers.count %>) OFFER 
                      </div>
                    </div>
                  </div>
                  <div id="offer-listing" class="span3">
                    <div>
                      <%= image_tag(listing.photo.url, {:width => '100px', :height => '100px'}) %> <!-- width="103" height="103" /> -->
    					      </div>
                  </div>
                </div>
              </div>
            <%else%>
              <!-- Need Listing -->
              <div class="rounded-need">
                <div class="row-fluid">
                    <span class="need-span">NEED</span> 
                    <span><%= listing.title %></span>
                </div>
                <div class="row-fluid">
                  <p><%= listing.description %></p>
                </div>
                <div style= "display:none;">
                  <%= image_tag('favorite.png') %> <!-- width="30" height="30" /><br /> -->
                  <%= image_tag('kid.png') %> <!-- width="43" height="34" /> -->
                </div>
                <div class="row-fluid">
                  <div class="span3">
                    <%= link_to image_tag(@user_photo, {:width => '100px', :height => '100px'}), listing.user, {:id => 'userImage', 'rel' =>'popover' } %>
                    <%= image_tag('stars.png') %>
                  </div>
                  <div id="need-actions" class="span6">
                    <div class="row-fluid tool">

                      <!-- Message-->
                      <div class="span3">
                        <a href="/sendmessage/<%= listing.user.id %>&nil" class='dynamolink'>
                        <%= image_tag('message.png', :class=>"message", :title=>"message") %> 
                        </a>
                      </div>
                      <!-- Initiate Exchange-->
                      <div class="span3 tTip" title="Exchange">
                        <% if signed_in? %>
                          <a class="dynamolink" href="/initiate_exchange/<%= @user.id.to_s %>&<%= listing.id.to_s%>">    
                            <%= image_tag('exchange.png') %>
                          </a>
                        
                        <%else%>
                        <%= image_tag('exchange.png', {:title=>"exchange"}) %>
                        <%end%> 
                      </div>
                      <div class="span3">
                        <a class="dynamolink" href="/quicksale/<%= listing.id.to_s%>">  
                          <%= image_tag('price.png') %>
                        </a>
                      </div>
                      <div class="span3">
                        <a class="dynamolink" href="/share/<%= listing.id.to_s%>">  
                          <%= image_tag('share.png') %>
                        </a>
                      </div>
                    </div>
                    <div class="row-fluid">
                      <div class="span6" id="need-name">
                        <%= listing.user.name %> <br />
                        <%= Exchange.where("id != ?",listing.user.id).all.count %> Exchanges<br />
                        Reviews (0)
                      </div>
                      <div class="span6">
                        (<%= listing.user.needs.count %>) NEED
                        <br />
                        (<%= listing.user.needs.count %>) need 
                      </div>
                    </div>
                  </div>
                  <div id="need-listing" class="span3">
                    <div>
                      <%= image_tag(listing.photo.url, {:width => '100px', :height => '100px'}) %> <!-- width="103" height="103" /> -->
                    </div>
                  </div>
                </div>
              </div>
            <%end%>
          <% end %>
          <!-- %= will_paginate @userlistings%-->
        </div>
      </div><!-- .span4 -->
      <div class="span5 offset2">
        <!-- MAP -->
        <div class="rounded-map">
          <iframe width="600" height="398" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=geekdom&amp;aq=&amp;sll=31.168934,-100.076842&amp;sspn=9.074154,12.634277&amp;ie=UTF8&amp;hq=geekdom&amp;hnear=&amp;t=m&amp;ll=29.428594,-98.491937&amp;spn=0.071946,0.071946&amp;output=embed"></iframe>
        </div>
        <!-- Tag Cloud-->
        <div id="wordcloud" style="width: 400px; height: 350px; margin-left: 20px;"></div>
        <!--AdBlocks-->
        <div>  
          <div class="adblock">AD</div>
          <div class="adblock">AD</div>
          <div class="adblock">AD</div>
        </div>
      </div><!-- .span5 .offset3--> 
    </div>
    <%= render 'shared/footer' %>
  </div>


  <!-- Dynamobox Modal -->
  <div class="modal fade hide" id="dynamobox" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
  
  <!-- Sign in Modal -->
  <%= render 'shared/signin'  %>
</body>
