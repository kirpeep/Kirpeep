<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>Kirpeep | Realize Yourself</title>
<%= javascript_include_tag "index.js" %>
<%= stylesheet_link_tag    "index.css" %>

</head>
<body>

<!--< %= render 'shared/signin' %>-->


  <div class='container'>
    <div class='row'>
      <div class="span6 offset1 pull-right">
      <% if signed_in? %>
      <div class="btn-group pull-right">
        <a class="btn dropdown-toggle" data-toggle="dropdown" onclick='$(this).dropdown()' href="#">
            <%= current_user.name %> - <%= if current_user.kirpoints == nil then 0 else current_user.kirpoints end %> kps
            <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            <li><%= link_to 'Buy Kirpoints' , '/kirpoints', :class => "dynamolink" %></li>
            <li><%= link_to 'View Profile', current_user %></li>
            <li><%= link_to 'Edit Profile' , edit_profile_path(current_user.profile), :class => "dynamolink" %></li>
            <li><%= link_to 'Edit Account', edit_user_path(current_user), :class => "dynamolink" %></li>
            <li><%= link_to 'Sign Out' , destroy_session_path %></li>
          
        </ul>
      </div>

      <%= link_to raw('<i class="icon-plus-sign"></i> Need'), 
	   new_userlisting_path(:type => "need"), 
	   {:class => 'dynamolink btn btn-link pull-right', 'role' => "button", 'data-toggle' => "modal" }%>

      
      <%= link_to raw('<i class="icon-plus-sign"></i> Offer'), new_userlisting_path(:type => "offer"), 
           {:class => 'dynamolink btn btn-link pull-right', 'role' => "button", 'data-toggle' => "modal" }%>
    <% else %>
      <div class='row pull-right'>
	      <a href='/forgot' class='dynamolink'>Forgot Password</a>
	      <a href="#signin" role="button" class="btn" data-toggle="modal" >Sign In</a>
      </div>
    <%end%>
     
    </div>
     
    
  </div>
  <div class='pull-right' style='margin-top:5px;'>About | How It Works | FAQs</div> 
   <% if flash[:notice] != nil %>
	    <div class="alert" style="width: 40%;margin-left:auto;margin-right:auto;">
	       <button type="button" class="close" data-dismiss="alert">×</button>
	       <div id="flash_notice">
		 <%= flash[:notice] %>
	       </div>
	    </div>
	    <% elsif flash[:error] != nil %>
	    <div class="alert alert-error" style="width: 40%;margin-left:auto;margin-right:auto;">
	       <button type="button" class="close" data-dismiss="alert">×</button>
	       <div id="flash_notice">
		 <%= flash[:error] %>
	       </div>
	    </div>
    <% end %>

  <div class='row'>
    <div class='span6 offset3 align-center'>
      <%= image_tag('kirpeep.png') %>
    </div>
  </div>
  <div class='row'>
    <div class='span5 offset4 align-center' id="search">
      <p>connect with others to exchange!</p>
      <%= form_tag search_path, :method => 'get', :class =>"form-search", :validate => true do %>
        <div class="input-append">
          <%= hidden_field_tag :direction, params[:direction] %>
          <%= hidden_field_tag :sort, params[:sort] %>
          <%= text_field_tag :search, params[:search] ,{ :class => 'span3', :placeholder => 'search or browse listings' }%>
          <%= submit_tag "search", {:class => "btn"} %>
        </div>
      <% end %>
    </div>
  </div>

  <div class='row'>
    <% if !signed_in? %>
    <div id="signup" class='span6 offset3 align-center'>
      <span id="signup" >Get Started by introducing yourself.</span>
      <%= form_tag("/signup/", :method =>"get") do %>
      <%= text_field_tag :email, 'Email', {'data-inline' => 'true' }%>
      <%= password_field_tag :password, 'Password',  {'data-inline' => 'true' } %>
      <%= submit_tag 'Sign up', :class => "dynamosignup btn", 'data-toggle' => "modal", 'role' => "button" %>

      <%end%>
    </div>
    <%end%>
    <div class='align-center'>
      <p>Contact | Terms of Use | Privacy<br />
      2012 Kirpeeps Inc.</p>
    </div>
  </div>


<!--The overlay and message box 
  <div id="fuzz">  
    <div id="msgbawx" class="msgbox" >  
    
	     
  	</div>  
  </div> --> 
  
  <!-- Sign in Modal -->
  <%= render 'shared/signin' %>

    <!-- Dynamobox Modal -->
  <div class="modal fade hide" id="dynamobox" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>

</body>
