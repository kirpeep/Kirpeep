<%= form_for(@initexch, :url => create_exchange_path) do |f| %>
<!-- fields_for templates -->
    
    <%= f.hidden_field :targUser, :value => @targListing.user.id %>
    <%= f.hidden_field :initUser, :value => current_user.id %>

    <!-- end of fields for/begining of Modal-->
    <div class="modal-header">
        <div class="row-fluid">
            <div class="span6">
                <h3 id="myModalLabel">Initiate Exchange</h3>
                <div class='align-center' id="exchangeStatus">
                        <div class="progress progress-striped">
                            <div class="bar" style="width: 20%;"></div>
                        </div>
                    </div>
            </div>
            <div class="span6">
                <div class='row-fluid'>
                    <div class='span4' id="userInfo">
                        <%= image_tag(current_user.profile.photo.url, {:width => '50px', :height => '50px'}) %><br>
                        <%= current_user.name %>
                    </div>

                    <!--Kirpeep Exchage Status Logo -->
                    <div class='span4 align-center' id="exchangeStatus">
                        <span id="with">exchanging with</span>
                    </div>

                    <!--exchange partner -->
                    <div class='span4 align-right' id="exchangePartner" >
                    
                            <%= image_tag(@targUser.profile.photo.url, {:width => '100px', :height => '100px'}) %>
                            <br>
                            <%= @targUser.name %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-body">
    
        <!--user viewing -->
        <!--closes top section-->

        <!--opens middle section-->
        <div class='row-fluid'>


        <!--left side-->
            <div class='span6'>
                <div><span id="getting">You are getting...</span></div>

                <!--User needs / Targ Offers -->
                <div class="tabbable tabs-left">
                    <ul class="nav nav-tabs" id="userItems">
                        <li class="active"><a href="#offer" data-toggle="tab">Listing 1</a></li>
                        <li id="user_new_link"><%= link_to '+', '#'%></li>
                    </ul>
                    <div class="tab-content" id="userExchItems">
                        <div class="tab-pane active" id="offer">
                            <!--  Listing -->
                            <% if @targListing.listingType == "offer" %>
                            <div data-url="/get_listing?id=<%= @targListing.id %>&targ=<%= current_user.id %>&init=<%= @targUser.id %>&type=offer" class='span7' id="targlisting"></div>
                            <% else %>
                            <div class='span7' data-url="/add_need?init=<%= current_user.id %>&targ=<%= @targUser.id %>" id="targlisting"></div>
                            <%end%>
                            <!-- End of Offer Listing --> 
                        </div>
                    </div>
                </div>
                
            </div>
            


            <!--Right Side-->
            <div class='span6'>
                <div><span id="giving">You are giving this...</span></div>

                <!-- Needs-->
                <div class="tabbable tabs-right">
                    <ul class="nav nav-tabs" id="targItems">
                        <li class="active"><a href="#needs" data-toggle="tab">Listing 1</a></li>
                        <li id="targ_new_link">
                            <%= link_to '+', '#' %>
                        </li>
                    </ul>
                    <div class="tab-content" id="targExchItems">
                        <div class="tab-pane active" id="needs">
                            <!-- Need Listing -->
                            <% if @targListing.listingType == "offer" %>
                            <div class='span7' data-url="/add_offer?init=<%= @user.id %>&targ=<%= @targUser.id %>" id="initlisting"></div>
                            <%else%>
                                <div class='span7' data-url="/get_listing?id=<%= @targListing.id %>&targ=<%= @targUser.id %>&init=<%= current_user.id %>&type=need" id="initlisting"></div>
                            <%end%>
                            <!--End of Need Listing-->
                        </div>
                    </div>
                </div>
                
            </div>
            <div class='clearfix'></div>
            <!--Opens Bottom Section-->
            <div class='row-fluid'>
                <%= fields_for 'initiate_exchange[message_attributes]' do |message| %>
                <span>Message</span>
                    <%= message.text_area :text, :class => 'rounded-map', :rows => '4', :style => "width:95%" %>
                    <%= message.hidden_field :targUser, :value => @targListing.user.id %>
                    <%= message.hidden_field :initUser, :value => current_user.id %>
                    <%= message.hidden_field :responseToMsgID, :value => 'exchange' %>
                <%end%>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
        <%= f.submit 'Initiate Exchange', :class => "btn btn-primary" %> 
    </div>
<% end %>
