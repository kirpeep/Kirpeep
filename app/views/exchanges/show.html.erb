    <!--#remove :type == Exchange
    #Ultimately Exchange will be
    #PotentialExchanges, started from 
    #searches that the user clicked through  
    #but never initated -->

    <% if(@exch.type == 'InitiateExchange' || @exch.type == 'Exchange')%> 
        <%= render 'initiated_exchange', :locals => {:exch => @exch, :targUser => @targUser, :initUser => @initUser, :targItems => @targItems, :initItems => @initItems, :exchange_items => @exchange_items} %>             
    <%  elsif (@exch.type == 'PerformExchange') %>
        <%= render 'perform_exchange', :locals => {:exch => @exch, :targUser => @targUser, :initUser => @initUser, :targItems => @targItems, :initItems => @initItems}  %>
    <% elsif (@exch.type == 'RateExchange') %>
        <%= render 'rate_exchange', :locals => {:exch => @exch, :targUser => @targUser, :initUser => @initUser, :targItems => @targItems, :initItems => @initItems} %>
    <% elsif (@exch.type == 'PreviousExchange') %>
        <%= render 'previous_exchange', :locals => {:exch => @exch, :targUser => @targUser, :initUser => @initUser, :targItems => @targItems, :initItems => @initItems} %>
    <%else%>
        DAFAQ
    <% end %>