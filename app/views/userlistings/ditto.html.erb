<div class="rounded-need"   >
  <span class="need-span">NEEDED</span><br />
  <span class="need-title span10"><%= @listing.title %></span> 

  <div id="need-actions" class="span9" >
      <div class="row tool pull-right">
        <div class="btn-group">
         <a class="btn dropdown-toggle" data-toggle="dropdown" onclick='$(this).dropdown()' href="#"><i class='icon-align-justify'></i> <span class="caret"></span>
         </a>
        <ul class="dropdown-menu" style='margin-left:-100px;'>    
        </ul>
       </div>
      </div>
        
    </div> 
       
 <div id="need-listing" class="span12">
      <div>
         
         <% if !(@listing.photo.url =~ /missing.png/) %>
          <%= image_tag(@listing.photo.url, :style=>'width:95%;') %>
          
        <% else %>
          <div class='noListingImage'></div>
        <% end %>
      </div>
    </div>
     <div class="span12">
      <p class="need-desc"><%= @listing.description %></p>
      <p>Category: <%= @listing.category %>
  </div>
  
  <div class="row-fluid">
    <div class="span4 pull-left">
      <% if signed_in? && @listing.user.id == current_user.id %>
      	<%= link_to image_tag(@listing.user.profile.photo.url, {:style=>'width:70px;', :class => 'img-polaroid'}), listing.user, {:id => 'userImage', 'rel' =>'popover' } %>
      <% else %>
        <a href='/view/<%= @listing.user.id %>'><%= image_tag(listing.user.profile.photo.url, {:style=>'width:70px;', :class => 'img-polaroid'}) %></a>
      <% end %>
      <%#= image_tag('stars.png') %>
    </div>
    
    <div class='pull-left'>
    <%#= @listing.user.name %>
    </div>

    <div style='font-weight:normal; '>
    <div class="span4 pull-left" style='margin-top:15px;font-size:12px;'>
        (<%= @listing.user.numOfExchanges %>) Exchanges<br />
        (0) Reviews 
    </div>
    <div class="span3 pull-right" style='margin-top:15px;font-size:12px;'>
          (<%= @listing.user.needs.count %>) need(s)
          <br />
          (<%= @listing.user.offers.count %>) offer(s) 
    </div>
  </div>
  </div>
</div>
