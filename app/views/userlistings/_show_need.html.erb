<div class="rounded-need"   >
  <span class="need-span">NEEDED</span><br />
  <span class="need-title span10"><%= listing.title %></span> 

  <% if signed_in? %>
  <div id="need-actions" class="span9" >
      <div class="row tool pull-right">
        <div class="btn-group">
         <a class="btn dropdown-toggle" data-toggle="dropdown" onclick='$(this).dropdown()' href="#"><i class='icon-align-justify'></i> <span class="caret"></span>
         </a>
        <ul class="dropdown-menu" style='margin-left:-100px;'>    
        <% if listing.user.id == current_user.id %>
          <!-- Edit -->
          <li>
            <a href="/edit_listing?id=<%= listing.id %>&listing_type=offer" class='dynamolink'>Edit
            <%#= image_tag('Icon_Edit_nocolor.png', 
                 :class=>"editIcon", 
                 :title=>"Edit", 
                 :onmouseover=>"$(this).attr('src','/assets/Icon_Edit_color.png');",
                 :onmouseout=>"$(this).attr('src','/assets/Icon_Edit_nocolor.png');") %>
            </a>
          </li>
          <li>
          <a class="dynamolink" href="/share/<%= listing.id.to_s%>">Share
            <%#= image_tag('Icon_Share_gray_regular.png', 
                 :class=>"shareIcon",
                 :title=>"Share", 
                 :onmouseover=>"$(this).attr('src','/assets/Icon_Share_green_rollover.png');",
                 :onmouseout=>"$(this).attr('src','/assets/Icon_Share_gray_regular.png');" ) %>
          </a>
          </li>
          <li>
            <%= link_to "Delete". @need, :method => :delete, :class => :destroy %>
          </li>
        <% else %>
          <!-- Message-->
          <li>
          <a href="/sendmessage?id=<%= listing.user.id %>&replyTo=nil" class='dynamolink'>Message
            <%#= image_tag('Icon_Message_gray_regular.png', 
                 :class=>"messageIcon", 
                 :title=>"Message", 
                 :onmouseover=>"$(this).attr('src','/assets/Icon_Message_blue_roll_over.png');",
                 :onmouseout=>"$(this).attr('src','/assets/Icon_Message_gray_regular.png');") %>
          </a>
          </li>
        
        <!-- Initiate Exchange-->
        
         <li>
             <a class="dynamolink" href="/initiate_exchange?id=<%= listing.id.to_s%>">Exchange it
              <%#= image_tag('Icon_Exchange_EE_gray_regular.png', 
                  :class=>"exchangeIcon",
                  :title=>"Exchange", 
                  :onmouseover=>"$(this).attr('src','/assets/Icon_Exchange_EE_orange_rollover.png');",
                  :onmouseout=>"$(this).attr('src','/assets/Icon_Exchange_EE_gray_regular.png');") %>
            
              </a>
          </li>
          
          <li>
          <a class="dynamolink" href="/share/<%= listing.id.to_s%>">Share
            <%#= image_tag('Icon_Share_gray_regular.png', 
                 :class=>"shareIcon",
                 :title=>"Share", 
                 :onmouseover=>"$(this).attr('src','/assets/Icon_Share_green_rollover.png');",
                 :onmouseout=>"$(this).attr('src','/assets/Icon_Share_gray_regular.png');" ) %>
          </a>
          </li>
         <!-- dropdown menu links -->
          <% end %>
        </ul>
       </div>
      </div>
        
    </div> 
       
        
    <% end %>
 <div id="need-listing" class="span12">
      <div>
         
         <% if !(listing.photo.url =~ /missing.png/) %>
          <%= image_tag(listing.photo.url, :style=>'width:95%;') %>
          
        <% else %>
          <div class='noListingImage'></div>
        <% end %>
      </div>
    </div>
     <div class="span12">
      <p class="need-desc"><%= listing.description %></p>
  </div>
  
  <div class="row-fluid">
    <div class="span4 pull-left">
      <% if signed_in? && listing.user.id == current_user.id %>
      	<%= link_to image_tag(listing.user.profile.photo.url, {:style=>'width:70px;', :class => 'img-polaroid'}), listing.user, {:id => 'userImage', 'rel' =>'popover' } %>
      <% else %>
        <a href='/view/<%= listing.user.id %>'><%= image_tag(listing.user.profile.photo.url, {:style=>'width:70px;', :class => 'img-polaroid'}) %></a>
      <% end %>
      <%= image_tag('stars.png') %>
    </div>
    
    <div class='pull-left'>
    <%#= listing.user.name %>
    </div>

    <div style='font-weight:normal; '>
    <div class="span4 pull-left" style='margin-top:15px;font-size:12px;'>
        (<%= Exchange.where("id != ?",listing.user.id).all.count %>) Exchanges<br />
        (0) Reviews 
    </div>
    <div class="span3 pull-right" style='margin-top:15px;font-size:12px;'>
          (<%= listing.user.needs.count %>) need(s)
          <br />
          (<%= listing.user.offers.count %>) offer(s) 
    </div>
  </div>
  </div>
</div>
