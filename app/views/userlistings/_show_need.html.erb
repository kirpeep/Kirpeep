<div class="rounded-need" onMouseOver="$(this).find('#need-actions').show();" onMouseOut="$(this).find('#need-actions').hide();"  >
  <span class="need-span">NEEDED</span><br />
  <span class="need-title"><%= listing.title %></span> 
  <div id="need-actions" class="span10" style='display:none'>
      <div class="row-fluid tool">

        <!-- Message-->
        <div class="span3">
          <a href="/sendmessage/<%= listing.user.id %>&nil" class='dynamolink'>
          <%= image_tag('Icon_Message_gray_regular.png', :class=>"messageIcon", :title=>"message") %> 
          </a>
        </div>
        <!-- Initiate Exchange-->
        <div class="span3 tTip" title="Exchange">
          <% if signed_in? %>
            <a class="dynamolink" href="/initiate_exchange/<%= @user.id.to_s %>&<%= listing.id.to_s%>">    
              <%= image_tag('Icon_Exchange_EE_gray_regular.png', :class=>"exchangeIcon") %>
            </a>
          
          <%else%>
          <%= image_tag('Icon_Exchange_EE_gray_regular.png', :class=>"exchangeIcon" , :title=>"exchange") %>
          <%end%> 
        </div>
        <div class="span3">
          <a class="dynamolink" href="/quicksale/<%= listing.id.to_s%>">  
            <%= image_tag('Icon_Coin_gray_regular.png', :class=>"priceIcon" ) %>
          </a>
        </div>
        <div class="span3">
          <a class="dynamolink" href="/share/<%= listing.id.to_s%>">  
            <%= image_tag('Icon_Share_gray_regular.png', :class=>"shareIcon") %>
          </a>
        </div>
      </div>
        
    </div> 
 <div id="need-listing" class="span12" style='margin: 5px 5px;'>
      <div>
        <%= image_tag(listing.photo.url, {}) %> <!-- width="103" height="103" /> -->
      </div>
    </div>
     <div class="span12">
      <p class="need-desc"><%= listing.description %></p>
  </div>
   
  <div style= "display:none;">
    <%= image_tag('favorite.png') %> <!-- width="30" height="30" /><br /> -->
    <%= image_tag('kid.png') %> <!-- width="43" height="34" /> -->
  </div>
  <div class="row-fluid">
    <div class="span4 pull-left">
      <%= link_to image_tag(@user_photo, {:width => '100px', :height => '100px'}), listing.user, {:id => 'userImage', 'rel' =>'popover' } %>
      <%= image_tag('stars.png') %>
    </div>
    
    <div class='pull-left'>
    <%#= listing.user.name %>
    </div>

    <div style='font-weight:normal;'>
    <div class="span4 pull-left" id="need-name">
        <%= Exchange.where("id != ?",listing.user.id).all.count %> Exchanges<br />
        Reviews (0)
    </div>
    <div class="span4 pull-right">
          (<%= listing.user.needs.count %>) need
          <br />
          (<%= listing.user.needs.count %>) need 
    </div>
  </div>
  </div>
</div>
