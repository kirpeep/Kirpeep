    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">List An Offer</h3>
</div>
<%= form_for([@user, Offer.new], :url => "/create_listing?type=offer", :html => { :multipart => true }) do |f| %>
<div class="modal-body">
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class='span3 pull-left'>
	  <div class="field">
	    <%= f.label :title %><br />
	    <%= f.text_field :title %>
	  </div>
	  <div class="field">
	    <%= f.label :description %><br />
	    <%= f.text_area :description , {:rows => '5'} %><br />
	  </div>
  </div> 
  <div class='span2 pull-left'>
	  <!--div class="field">
	    <%= f.label :inventoryCount %><br />
	    <%= f.text_field :quantity %>
	  </div-->
	  <div class="field">
	    <%= f.label :photo %><br />
	    <%= f.file_field :photo %>
	  </div>
          <div class="field">
	    How many Kirpoints for this item?
	    <%= f.text_field :kirpoints %>
	  </div>
  </div>
</div>
<div class="modal-footer">
	<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
	<%= f.submit 'Save', :class => "btn" %>
	<% end %>
</div>
