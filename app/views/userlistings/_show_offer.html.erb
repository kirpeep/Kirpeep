<div class="rounded-offer" onMouseOver="$(this).find('#need-actions').show();" onMouseOut="$(this).find('#need-actions').hide();"  >
  <span class="offer-span">OFFERED</span><br />
  <span class="offer-title span10"><%= listing.title %></span>
  <div id="need-actions" class="span10" style='display:none'>
      <div class="row-fluid tool">

        <!-- Message-->
        <div class="span3">
          <a href="/sendmessage/<%= listing.user.id %>&nil" class='dynamolink'>
          <%= image_tag('Icon_Message_gray_regular.png', 
                 :class=>"messageIcon", 
                 :title=>"message", 
                 :onmouseover=>"$(this).attr('src','/assets/Icon_Message_blue_roll_over.png');",
                 :onmouseout=>"$(this).attr('src','/assets/Icon_Message_gray_regular.png');") %> 
          </a>
        </div>
        <!-- Initiate Exchange-->
        <div class="span3 tTip" title="Exchange">
          <% if signed_in? %>
            <a class="dynamolink" href="/initiate_exchange/<%= @user.id.to_s %>&<%= listing.id.to_s%>">    
              <%= image_tag('Icon_Exchange_EE_gray_regular.png', 
                  :class=>"exchangeIcon",
                  :onmouseover=>"$(this).attr('src','/assets/Icon_Exchange_EE_orange_rollover.png');",
                  :onmouseout=>"$(this).attr('src','/assets/Icon_Exchange_EE_gray_regular.png');") %>
            </a>
          
          <%else%>
          <%= image_tag('Icon_Exchange_EE_gray_regular.png', 
                  :class=>"exchangeIcon" , 
                  :title=>"exchange",
                  :onmouseover=>"$(this).attr('src','/assets/Icon_Exchange_EE_orange_rollover.png');",
                  :onmouseout=>"$(this).attr('src','/assets/Icon_Exchange_EE_gray_regular.png');")%>
          <%end%> 
        </div>
        <div class="span3">
          <a class="dynamolink" href="/quicksale/<%= listing.id.to_s%>">  
            <%= image_tag('Icon_Coin_gray_regular.png', 
                  :class=>"priceIcon",
                  :onmouseover=>"$(this).attr('src','/assets/Icon_Coin_orange_rollover.png');",
                  :onmouseout=>"$(this).attr('src','/assets/Icon_Coin_gray_regular.png');" ) %>
          </a>
        </div>
        <div class="span3">
          <a class="dynamolink" href="/share/<%= listing.id.to_s%>">  
            <%= image_tag('Icon_Share_gray_regular.png', 
                 :class=>"shareIcon",
                 :onmouseover=>"$(this).attr('src','/assets/Icon_Share_green_rollover.png');",
                 :onmouseout=>"$(this).attr('src','/assets/Icon_Share_gray_regular.png');" ) %>
          </a>
        </div>
      </div>
        
    </div>

    <div id="need-listing" class="span12">
      <div>
        <% if !(listing.photo.url =~ /missing.png/) %>
          <div style='background-image: url("<%= listing.photo.url %>");width:95%;height:250px;background-size:100% 100%;background-repeat: no-repeat;'></div>
        <% else %>
          <div class='noListingImage'></div>
        <% end %>
      </div>
    </div>
     <div class="span12">
      <p class="need-desc"><%= listing.description %></p>
  </div>
   
  <div style= "display:none;">
    <%= image_tag('favorite.png') %> <!-- width="30" height="30" /><br /> -->
    <%= image_tag('kid.png') %> <!-- width="43" height="34" /> -->
  </div>
  <div class="row-fluid">
    <div class="span4 pull-left">
      <%= link_to image_tag(listing.user.profile.photo.url), listing.user, {:id => 'userImage', 'rel' =>'popover' } %>
      <%= image_tag('stars.png') %>
    </div>
    
    <div class='pull-left'>
    <%#= listing.user.name %>
    </div>

    <div style='font-weight:normal;'>
    <div class="span4 pull-left" style='margin-top:15px;'>
        <%= Exchange.where("id != ?",listing.user.id).all.count %> Exchanges<br />
        Reviews (0)
    </div>
    <div class="span4 pull-right" style='margin-top:15px;'>
          (<%= listing.user.needs.count %>) need
          <br />
          (<%= listing.user.needs.count %>) need 
    </div>
  </div>
  </div> 
</div>
