<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Edit Offer</h3>
</div>

<%= form_for @listing, :url => '/userlistings/' + @listing.id.to_s(), :method => 'put', :html => { :multipart => true } do |f| %>
<div class="modal-body">
	  <div class='span3 pull-left'>

		  <div class="field">
		    <%= f.label :title %>
		    <%= f.text_field :title %>
		  </div>
		  <div class="field">
		    <%= f.label :description %>
		    <%= f.text_area :description, {:rows => '5'}  %>
		  </div>
          </div>
          <div class='span2 pull-left'>
		  <div class="field">
		    <%= f.label :inventoryCount %>
		    <%= f.text_field :inventoryCount %>
		  </div>
		  <div class="field">
		    <%= f.label :photo %>
		    <%= f.file_field :photo %>
		  </div>
                  <div class="field">
                    <%= f.label :category %><br />
                    <%= f.select :category, $categories %>
                  </div>
		  <div class="field">
                    <%= f.label :shippable, "Can this item can be shipped?" %>
                    <%= f.check_box :shippable %>
                  </div>
		  <div class="field">
                    <%= link_to 'edit location', "/userlisting/"+@listing.id.to_s+"/edit_location/' %>
                  </div>

		  <!-- add listing type -->
		  <div class="actions">
		    
		  </div>
          </div>
	
	<div class="delete">
	    
  	</div>
</div>
<div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <%= f.submit 'Save', :class => "btn btn-primary" %> 
    <% end %>
    <%#= button_to "Delete", @offer, :method=>:delete, :class=>"destroy btn" %>
</div>
