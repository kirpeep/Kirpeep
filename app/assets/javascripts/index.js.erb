$(document).ready(function() {
  $('.dynamolink').live("click", function(event){
    var path = $(this).attr('href');
    $('#dynamobox').load(path);
    $('#dynamobox').modal('show');
    event.preventDefault();
  });

  $("#ee").cycle({
    fx: 'scrollDown',
    speed: 2000 
  });
  //used when signup is in a modal
  $('.dynamosignup').click(function(event){
    var path = $(this).attr('href');
    var email = $('#email').attr("value");
    email = email.split('.').join('_')
    email = encodeURIComponent(email);
    var password = $('#password').attr("value");
    $('#dynamobox').load('/signup/'+email+'&'+password);
    $('#dynamobox').modal('show');
    event.preventDefault();
  });


});

$(document).ready(function () {
	$('#search').keyup(function(){
         
	  if ($('#search').val() == '')
	    $('#btnViewListings').val('Browse');
	  else
	    $('#btnViewListings').val('Search');
	});

  $('#search_mobile').keyup(function(){
         
    if ($('#search_mobile').val() == '')
      $('#btnViewListings_mobile').val('Browse');
    else
      $('#btnViewListings_mobile').val('Search');
  });
});
